# ========================================
# CultrCode Environment Variables Template
# ========================================
# Copy this file to .env.local and fill in your actual values

# ========================================
# CLERK AUTHENTICATION
# ========================================
# Get these from https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Clerk Webhook Secret (for user sync)
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret_here

# ========================================
# STRIPE PAYMENT PROCESSING
# ========================================
# Get these from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Webhook Secret (for subscription events)
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Your app's domain (change for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database URL (if using external database)
DATABASE_URL=file:./data/cultrcode.db

# ========================================
# AI IMAGE GENERATION (Optional)
# ========================================
# For profile picture generation
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here
NEXT_PUBLIC_MIDJOURNEY_API_KEY=your_midjourney_api_key_here

# Alternative AI Services
STABILITY_AI_API_KEY=your_stability_ai_key_here
REPLICATE_API_TOKEN=your_replicate_token_here

# ========================================
# MAPBOX (Optional - for geographic features)
# ========================================
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_token_here

# ========================================
# ANALYTICS & MONITORING (Optional)
# ========================================
# Add your analytics keys here
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-YOUR_GA_ID_HERE
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
# For transactional emails
RESEND_API_KEY=re_your_resend_api_key_here
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================
# Set to 'production' for live deployment
NODE_ENV=development

# Disable Next.js telemetry for privacy
NEXT_TELEMETRY_DISABLED=1